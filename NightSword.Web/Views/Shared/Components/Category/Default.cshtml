@model IEnumerable<CategoryDto>

    <ul class="list-group">

        <li class="list-group-item">
            <a class="nav-link text-dark" asp-controller="Product" asp-action="Index">All Product</a>
        </li>

        @foreach (var item in Model)
        {
            <li class="list-group-item">
                <a class="nav-link text-dark" asp-controller="Product" asp-action="ProductsByCategory" asp-route-categoryId="@item.Id">@item.Name</a>
            </li>
        }
    </ul>
