@model IEnumerable<NightSword.Associate.Dtos.CategoryDto>

@{
    ViewData["Title"] = "Index";
}



<div class="row mt-2">
    <div class="col-sm-12">
        <div class="card">
            <div class="card-header">
                <h4>List of Categories</h4>
            </div>
            <div class="card-body">
                <table class="table sorting" id="categories">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Name</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr id="id_@item.Id">
                                <td>@item.Id</td>
                                <td>@item.Name</td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning ">Edit</a> |
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger confirmDeletion">Delete</a>                                 
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="card-footer">
                <a asp-action="Create" class="btn btn-block btn-sm btn-dark">Create new one</a>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script>$("table#categories tbody").sortable({
            placeholder: "ui-state-highlight",
            update: function () {
                let ids = $("table#categories tbody").sortable("serialize");
                $.post(url, ids, function () { })
            }
        });</script>
}